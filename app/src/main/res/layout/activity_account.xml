<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:padding="15dp"
    android:background="@color/darkBackground"
    android:textColor="@color/light"
    android:orientation="vertical"
    tools:context="wems.org.miartecostarricense.AccountActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!--foto de perfil-->
            <LinearLayout
                android:id="@+id/btn_fotoPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/joseph"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/lblFotoPerfil"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Foto Perfil"
                    android:textColor="@color/light2"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textSize="16sp" />

            </LinearLayout>



            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Frank Rosmik"
                    android:textColor="@color/light2"
                    android:layout_margin="20dp"
                    android:id="@+id/txtNombre" />



                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Osa, Puntarenas, Costa Rica"
                    android:textColor="@color/light2"
                    android:layout_margin="20dp"
                    android:id="@+id/txtUbicacion" />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="frosmik@yimeil.com"
                    android:textColor="@color/light2"
                    android:layout_margin="20dp"
                    android:id="@+id/txtEmail" />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27888345"
                    android:textColor="@color/light2"
                    android:layout_margin="20dp"
                    android:id="@+id/txtTTelefono" />


            </TableLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tipo de ArtesanÃ­a"
                        android:textColor="@color/light"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="40dp"
                        android:layout_marginTop="30dp"
                        android:id="@+id/lblTipoArtesania" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <ListView
                        android:id="@+id/ltTipoArtesanias"
                        android:layout_marginLeft="10dp"
                        android:scrollbars="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="265dp"/>


                </LinearLayout>

            </LinearLayout>



            <LinearLayout
                android:id="@+id/btn_AdjuntarArtesanias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:layout_gravity="center"
                android:orientation="vertical">

                <ImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/artesanias_image"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/ic_picture"
                    android:layout_gravity="center"/>

                <TextView
                    android:id="@+id/lblAdjuntarArtesanias"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Adjuntar Fotos de Obras"
                    android:textColor="@color/light2"
                    android:fontFamily="sans-serif-medium"
                    android:textStyle="bold"
                    android:textSize="16sp" />

            </LinearLayout>





        </LinearLayout>

    </ScrollView>


</LinearLayout>
